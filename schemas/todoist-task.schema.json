{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Todoist Task",
  "type": "object",
  "required": ["id", "project_id", "order", "content", "priority", "creator_id", "created_at"],
  "properties": {
    "id": { "type": "string", "pattern": "^\\d+$" },
    "assigner_id": { "type": ["string", "null"], "pattern": "^\\d+$" },
    "assignee_id": { "type": ["string", "null"], "pattern": "^\\d+$" },
    "project_id": { "type": "string", "pattern": "^\\d+$" },
    "section_id": { "type": ["string", "null"], "pattern": "^\\d+$" },
    "parent_id": { "type": ["string", "null"], "pattern": "^\\d+$" },
    "order": { "type": "integer" },
    "content": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "is_completed": { "type": "boolean" },
    "labels": { "type": "array", "items": { "type": "string" } },
    "priority": { "type": "integer", "minimum": 1, "maximum": 4 },
    "comment_count": { "type": "integer" },
    "creator_id": { "type": "string", "pattern": "^\\d+$" },
    "created_at": { "type": "string", "format": "date-time" },
    "due": { "type": ["object", "null"] },
    "url": { "type": "string", "format": "uri" },
    "duration": { "type": ["object", "null"] },
    "deadline": { "type": ["object", "null"] }
  },
  "additionalProperties": false
}